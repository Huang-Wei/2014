    #wrap
      .navbar.navbar-default.navbar-fixed-top
        #popup.alert
        .container
          .navbar-header
            button.navbar-toggle(type='button' data-toggle='collapse' data-target='.navbar-collapse')
              //span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            img.navbar-img(src='/images/2014.png')
            a.navbar-brand(href='#') 2014巴西世界杯
              sup  beta
          .collapse.navbar-collapse
            ul.nav.navbar-nav
              li
                a(href='/') 赛程
              li
                a(href='/board') 竞猜总积分榜
              if (user)
                li
                  a(href='/circle') 我的圈子
                li
                  a(href='/bet/vote') 我的竞猜
          
            ul.nav.navbar-nav.navbar-right
              if (user)
                li
                  a.disabled #{user}
                li
                  a(href='/user/logout') 注销
              else
                li
                  a(href='/user/login') 登陆

      script(src='/js/jquery-1.10.2.min.js')
      script(src='/js/bootstrap.min.js')
      .container
        block content
